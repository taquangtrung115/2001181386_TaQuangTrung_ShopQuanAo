@model Model.Entity.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel panel-heading">
                <h1>Sửa Sản Phẩm</h1>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.MaTL)</label>
                                @Html.TextBoxFor(model => model.MaTL, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaTL)
                            </div>
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.MaNCC)</label>
                                @Html.TextBoxFor(model => model.MaNCC, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaNCC)
                            </div>
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.TenSP)</label>
                                @Html.TextBoxFor(model => model.TenSP, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TenSP)
                            </div>
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.DonGia)</label>
                                @Html.TextBoxFor(model => model.DonGia, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DonGia)
                            </div>
                            <div class="form-group">
                                <label>@Html.LabelFor(model => model.Anh)</label>
                                @Html.TextBoxFor(model => model.Anh, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Anh)
                            </div>
                            <p>
                                <input type="submit" value="Tạo Mới" />
                            </p>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
