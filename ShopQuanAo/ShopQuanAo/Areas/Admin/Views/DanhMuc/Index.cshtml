@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model PagedList.IPagedList<Model.Entity.TheLoai>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh Sách Danh Mục Sản Phẩm</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Danh Mục</th>
                        <th>Tên Danh Mục</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    @foreach (var item in Model)
                    {
                        <tr class="row_@item.MaTL">
                            <td>@item.MaTL</td>
                            <td>@item.Ten</td>
                            <td>
                                <a href="/Admin/DanhMuc/Edit/@item.MaTL">Sửa</a>
                                |
                                @Ajax.ActionLink("Xóa", "Delete", new { @ma = item.MaTL }, new AjaxOptions
                                           {
                                               Confirm = "Bạn có chắc muốn xóa",
                                               OnComplete = "$('#row_" + item.MaTL + "').remove()",
                                               HttpMethod = "Delete"
                                           }
                                                )
                                |
                                @Html.ActionLink("Thêm","Create","DanhMuc")
                            </td>
                        </tr>

                    }
                    
                </tfoot>
            </table>
        </div>
    </div>
</div>
