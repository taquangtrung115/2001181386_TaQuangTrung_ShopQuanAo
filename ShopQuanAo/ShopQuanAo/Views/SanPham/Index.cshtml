@model List<Model.Entity.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Tất Cả Sản Phẩm</h3>
        </div>
       
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in Model)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@Url.Action("ChiTietSP", "SanPham", new { @masp = item.MaSP })"><img src="~/ContentsNguoiDung/Image/@item.Anh" alt="@item.TenSP" /></a>

                <h2>@item.TenSP</h2>
                
                <h2><a href="@Url.Action("ChiTietSP", "SanPham", new { @masp = item.MaSP })">Xem Chi Tiết</a></h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">Giá: @item.DonGia</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="@Url.Action("GioHang", "GioHang", new { @ma = item.MaSP })">Thêm Vào Giỏ Hàng</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        }
    </div>
</div>
