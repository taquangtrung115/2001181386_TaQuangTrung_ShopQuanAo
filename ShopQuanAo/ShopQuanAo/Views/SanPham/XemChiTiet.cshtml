@model ShopQuanAo.Models.SanPham
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="content">
    <h2>Chi Tiết Sản Phẩm</h2>
    <div class="card border-dard">
        <table class="border-dark mx-3 mb-3 mt-3">
            <tr class="text-left">
                <td rowspan="5" width="45%">
                    <img class="card-header" src="~/ContentsNguoiDung/Image/@Model.Anh" width="100%" height="100%" alt="Image" />
                </td>
                <td width="20%">
                    Tên Sản Phẩm:
                </td>
                <td width="35%" style="font-weight:bold; color:blue">
                    @Model.TenSP
                </td>
            </tr>
            <tr class="text-left">
                <td width="20%">
                    Tên Danh Mục:
                </td>
                <td style="color:blue">
                    @Model.TheLoai.Ten
                </td>
            </tr>
            
            
            <tr class="text-left">
                <td width="20%">
                    Giá bán:
                </td>
                <td style="color:red;font-weight:bold;">
                    @string.Format("{0:0,0}", Model.DonGia) VNĐ
                </td>
            </tr>
            <tr>
                <td>
                    <a href="@Url.Action("themGioHang", "GioHang", new { @ms = Model.MaSP, @strURL = Request.Url.ToString() })">
                        <input type="submit" value="Mua Ngay" class="btn btn-primary" /> &nbsp;&nbsp; &nbsp; &nbsp; &nbsp;
                    </a>
                    <a href="@Url.Action("Index", "SanPham")">
                        <input type="submit" value="Mua Tiếp" class="btn btn-primary" />
                    </a>
                </td>
            </tr>
        </table>
    </div>
</div>
